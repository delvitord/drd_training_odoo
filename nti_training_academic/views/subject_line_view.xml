<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <data>
        <!-- Form View -->
        <record id="subject_line_view_form" model="ir.ui.view">
            <field name="name">subject.line.view.form</field>
            <field name="model">subject.line</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <group>
                                <div class="oe_title">
                                    <h1>
                                        <field name="subject_id" placeholder="Subject's Name"/>
                                    </h1>
                                </div>
                            <group>
                                <field name="lecturer_id" readonly="1"/>
                            </group>
                        </group>
                        
                        <group>
                            <field name="start_hour" widget="float_time"/>
                            <field name="end_hour" widget="float_time"/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>
        
    
    </data>
    

</odoo>
