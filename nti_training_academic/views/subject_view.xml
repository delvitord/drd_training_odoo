<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!-- List View -->
        <record id="subject_view_tree" model="ir.ui.view">
            <field name="name">subject.view.tree</field>
            <field name="model">subject.subject</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="name"/>
                    <field name="code"/>
                    <field name="lecturer_id"/>
                </tree>
            </field>
        </record>

        <!-- Kanban View -->
        <record id="subject_view_kanban" model="ir.ui.view">
            <field name="name">subject.view.kanban</field>
            <field name="model">subject.subject</field>
            <field name="arch" type="xml">
                <kanban>
                    <field name="image"/>
                    <field name="name"/>
                    <field name="code"/>
                    <field name="lecturer_id"/>
                    <templates>
                        <t t-name="kanban-box">
                            <div class="oe_kanban_global_click" style="display: flex; align-items: center;">
                                <div class="oe_kanban_image" style="margin-right: 16px;">
                                    <img alt="Avatar" t-att-src="kanban_image('subject.subject', 'image', record.id)" style="max-width: 100px; max-height: 100px;"/>
                                </div>
                                <div class="oe_kanban_details">
                                    <ul>
                                        <li>
                                            <strong><t t-esc="record.name.value"/></strong>
                                        </li>
                                        <li>
                                            <t t-esc="record.code.value"/>
                                        </li>
                                        <li>
                                            <t t-esc="record.lecturer_id.value"/>
                                        </li>
                                    </ul>
                                </div>
                            </div>
                        </t>
                    </templates>
                </kanban>
            </field>
        </record>
    </data>
</odoo>
