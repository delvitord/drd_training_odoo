<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>
        <!-- List View -->
        <record model="ir.ui.view" id="baggage_baggage_view_tree">
            <field name="name">baggage.baggage.view.tree</field>
            <field name="model">baggage.baggage</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="name"/>
                    <field name="weight"/>
                </tree>
            </field>
        </record>
        
        <!-- Form View -->
        <record model="ir.ui.view" id="baggage_baggage_view_form">
            <field name="name">baggage.baggage.view.tree</field>
            <field name="model">baggage.baggage</field>
            <field name="arch" type="xml">
                <form>
                    <header>
                    </header>
                    <div>
                        <h1>
                            <field name="name" placeholder="Baggage's Name"/>
                        </h1>
                    </div>
                    <sheet>
                        <group>
                            <group>
                                <field name="weight"/>
                            </group>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>
    </data>
</odoo>