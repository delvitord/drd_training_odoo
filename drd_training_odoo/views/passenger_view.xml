<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>
        <!-- List View -->
        <record model="ir.ui.view" id="passenger_view_tree">
            <field name="name">passenger.view.tree</field>
            <field name="model">res.passenger</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="name"/>
                    <field name="weight"/>
                    <field name="height"/>
                    <field name="born_date"/>
                </tree>
            </field>
        </record>
        
        <!-- Form View -->
        <record model="ir.ui.view" id="passenger_view_form">
            <field name="name">passenger_view_form</field>
            <field name="model">res.passenger</field>
            <field name="arch" type="xml">
                <form>
                    <header>
                    </header>
                    <sheet>
                        <div class="oe_title"> 
                            <h1> 
                                <field name="name" placeholder="Passenger's Name" /> 
                            </h1>
                        </div>
                        <group>
                            <group>
                                <field name="weight"/>
                                <field name="height"/>
                            </group>
                            <group>
                                <field name="born_date"/>
                            </group>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>
    </data>
</odoo>