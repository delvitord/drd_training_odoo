<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>
        <!-- List View -->
        <record model="ir.ui.view" id="bus_schedule_view_tree">
            <field name="name">bus.schedule.view.tree</field>
            <field name="model">bus.schedule</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="name"/>
                    <field name="date_of_issue"/>
                    <field name="departure"/>
                    <field name="arrival"/>
                    <field name="capacity"/>
                    <field name="payment_type"/>
                    <field name="bus_id"/>
                    <field name="route_id"/>
                </tree>
            </field>
        </record>
        
        <!-- Form View -->
        <record model="ir.ui.view" id="bus_schedule_view_form">
            <field name="name">bus.schedule.view.form</field>
            <field name="model">bus.schedule</field>
            <field name="arch" type="xml">
                <form>
                    <header>
                    </header>
                    <sheet>
                        <div class="oe_title"> 
                            <h1> 
                                <field name="name" placeholder="Schedule's Name"/> 
                            </h1> 
                        </div>
                        <div class="o_row oe_title">
                            <div class="o_col oe_title_left">
                                <h2>
                                    <field name="bus_id" placeholder="Bus's Name"/>
                                </h2>
                                
                            </div>
                            <div class="o_col oe_title_right">
                                <h2>
                                    <field name="route_id" placeholder="Route's Name"/>
                                </h2>
                            </div>
                        </div>
                        <group>
                            <group>
                                
                            </group>
                            <group>
                            </group>
                            <group>
                                <field name="capacity"/>
                                <field name="date_of_issue"/>
                                <field name="payment_type"/>
                            </group>
                            <group>
                                <field name="driver_id"/>
                                <field name="departure"/>
                                <field name="arrival"/>
                            </group>
                        </group>
                        <notebook>
                            <page string="Baggage">
                                <field name="baggage_ids">
                                    <tree>
                                        <field name="name"/>
                                        <field name="weight"/>
                                    </tree>
                                </field>
                            </page>
                            <page string="Passenger">
                                <field name="passenger_ids">
                                    <tree>
                                        <field name="name"/>
                                        <field name="height"/>
                                        <field name="weight"/>
                                        <field name="born_date"/>
                                    </tree>
                                </field>
                            </page>
                             <page string="Driver Information">
                                <div>
                                    <h1>
                                        <field name="driver_id" placeholder="Driver's Name" readonly="1" attrs="{'invisible': [('driver_id', '=', False)]}"/>
                                    </h1>
                                </div>
                                <group>
                                    <group>
                                        <field name="driver_license"  attrs="{'invisible': [('driver_id', '=', False)]}" />
                                        <field name="driver_license_expired_date" attrs="{'invisible': [('driver_id', '=', False)]}"/>
                                    </group>
                                </group>
                                
                            </page>
                        </notebook>
                    </sheet>
                </form>
            </field>
        </record>

        <!-- Search View -->
        <record model="ir.ui.view" id="bus_schedule_view_search">
            <field name="name">bus.schedule.view.search</field>
            <field name="model">bus.schedule</field>
            <field name="arch" type="xml">
                <search string="Bus Schedule Search">
                    <field name="name"/>
                    <field name="route_id"/>
                    <field name="bus_id"/>

                    <filter string="Cash Payment" name="filter_cash_payment" domain="[('payment_type', '=', 'cash')]"/>
                    <filter string="Transfer Payment" name="filter_transfer_payment" domain="[('payment_type', '=', 'transfer')]"/>

                    <group expand="1" string="Group By">
                        <filter string="Route" name="group_route" context="{'group_by': 'route_id'}"/>
                        <filter string="Bus" name="group_bus" context="{'group_by': 'bus_id'}"/>
                    </group>


                </search>
            </field>
        </record>
    </data>
</odoo>