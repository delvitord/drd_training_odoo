<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>
        <!-- List View -->
        <record model="ir.ui.view" id="bus_schedule_view_tree">
            <field name="name">bus.schedule.view.tree</field>
            <field name="model">bus.schedule</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="name"/>
                    <field name="date_of_issue"/>
                    <field name="departure"/>
                    <field name="arrival"/>
                </tree>
            </field>
        </record>
        
        <!-- Form View -->
        <record model="ir.ui.view" id="bus_schedule_view_form">
            <field name="name">bus.schedule.view.form</field>
            <field name="model">bus.schedule</field>
            <field name="arch" type="xml">
                <form>
                    <header>
                    </header>
                    <sheet>
                        <div class="oe_title"> 
                            <h1> 
                                <field name="name" placeholder="Schedule's Name"/> 
                            </h1> 
                        </div>
                        <group>
                            <group>
                                <field name="date_of_issue"/>
                                <field name="payment_type"/>
                            </group>
                            <group>
                                <field name="departure"/>
                                <field name="arrival"/>
                            </group>
                        </group>
                        <notebook>
                            <page string="Baggage">
                                <field name="baggage_ids">
                                    <tree>
                                        <field name="name"/>
                                        <field name="weight"/>
                                    </tree>
                                </field>
                            </page>
                            <page string="Passenger">
                                <field name="passenger_ids">
                                    <tree>
                                        <field name="name"/>
                                        <field name="height"/>
                                        <field name="weight"/>
                                        <field name="born_date"/>
                                    </tree>
                                </field>
                            </page>
                        </notebook>
                    </sheet>
                </form>
            </field>
        </record>
    </data>
</odoo>